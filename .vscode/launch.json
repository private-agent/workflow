{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Test: test_workflow_basic",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_workflow.py::test_workflow_basic",
                "-v",
                "--log-cli-level=DEBUG"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "DEBUG",
                "LOG_DETAIL": "true"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
        }
    ]
}